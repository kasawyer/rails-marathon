<h1>New Gallery Form</h1>

  <%= form_for(@gallery) do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :city %><br />
      <%= f.text_area :city %>
    </div>

    <div class="field">
      <%= f.label :state %><br />
      <%= f.text_area :state %>
    </div>

    <div class="field">
      <%= f.label :zip %><br />
      <%= f.text_area :zip %>
    </div>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </div>

    <div class="actions">
      <%= f.submit "Add Gallery"%>
    </div>
  <% end %>
