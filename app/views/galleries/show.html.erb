<h1><%= @gallery.name %></h1>

<ul>
  <li>
    <%= @gallery.city %>
    <%= @gallery.state %>
    <%= @gallery.zip %>
    <%= @gallery.description %>
  </li>
</ul>

<ul>
  <% @paintings.each do |painting| %>
  <li>
    <%= painting.title %>
    <%= painting.year %>
    <%= painting.artist %>
    <%= painting.created_at.strftime("%B %d %Y") %>
  </li>
  <% end %>
</ul>

<p><%= link_to 'Add a Painting', new_gallery_painting_path(@gallery) %></p>
